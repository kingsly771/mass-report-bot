# ==============================================
# TELEGRAM BOT CONFIGURATION (REQUIRED)
# ==============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_ID=your_telegram_user_id_here

# ==============================================
# WHATSAPP SUPPORT EMAILS
# ==============================================
WHATSAPP_SUPPORT_EMAIL=support@support.whatsapp.com
WHATSAPP_ABUSE_EMAIL=abuse@whatsapp.com
WHATSAPP_ANDROID_SUPPORT=android@support.whatsapp.com
WHATSAPP_IOS_SUPPORT=ios@support.whatsapp.com

# ==============================================
# SMTP EMAIL CONFIGURATION (REQUIRED - GMAIL EXAMPLE)
# ==============================================
# Your Gmail address (must use App Password, not regular password)
SMTP_EMAIL=your_email@gmail.com

# Gmail App Password (generate from Google Account settings)
SMTP_PASSWORD=your_16_digit_app_password

# SMTP Service Settings
SMTP_SERVICE=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# ==============================================
# REPORTING LIMITS
# ==============================================
MIN_REPORTS_PER_SESSION=10
MAX_REPORTS_PER_SESSION=50
MAX_REPORTS_PER_HOUR=100
MAX_REPORTS_PER_DAY=500
REPORT_COOLDOWN=3600000

# ==============================================
# EMAIL SENDING SETTINGS
# ==============================================
EMAIL_SEND_DELAY=3000
MAX_EMAIL_ATTEMPTS=3
EMAIL_RETRY_DELAY=10000
EMAIL_BATCH_SIZE=5

# ==============================================
# EMAIL HEADERS & CONTENT
# ==============================================
EMAIL_PRIORITY=high
EMAIL_IMPORTANCE=high
EMAIL_X_MAILER=WhatsApp Mass Reporter Bot v2.0

# ==============================================
# SECURITY & RATE LIMITING
# ==============================================
USER_COOLDOWN_PERIOD=300000
MAX_CONCURRENT_SESSIONS=3
IP_RATE_LIMIT=30

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
SAVE_REPORTS_LOCALLY=true
REPORT_BACKUP_DIR=./reports_backup

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_RETRY_SYSTEM=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_CAPTCHA=false
ENABLE_IP_BLOCKING=true
ENABLE_USER_BLOCKING=true

# ==============================================
# SECURITY SETTINGS
# ==============================================
MAX_LOGIN_ATTEMPTS=5
BLOCK_DURATION=3600000
ALLOWED_COUNTRIES=US,UK,CA,AU,DE,FR
