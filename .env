# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_ID=123456789

# WhatsApp Support Emails
WHATSAPP_SUPPORT_EMAIL=support@support.whatsapp.com
WHATSAPP_ABUSE_EMAIL=abuse@whatsapp.com
WHATSAPP_ANDROID_SUPPORT=android@support.whatsapp.com
WHATSAPP_IOS_SUPPORT=ios@support.whatsapp.com

# Reporting Limits
MIN_REPORTS_PER_SESSION=10
MAX_REPORTS_PER_SESSION=100
MAX_REPORTS_PER_HOUR=200
MAX_REPORTS_PER_DAY=1000
REPORT_COOLDOWN=3600000

# Email Configuration
EMAIL_SEND_DELAY=2000
MAX_EMAIL_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000
EMAIL_BATCH_SIZE=10

# SMTP Configuration (for real email sending)
SMTP_ENABLED=true
SMTP_SERVICE=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email Headers
EMAIL_PRIORITY=high
EMAIL_IMPORTANCE=high
EMAIL_X_MAILER=WhatsApp Mass Reporter Bot v2.0

# Security Settings
USER_COOLDOWN_PERIOD=300000
MAX_CONCURRENT_SESSIONS=5
IP_RATE_LIMIT=50

# Logging
LOG_LEVEL=info
SAVE_REPORTS_LOCALLY=true
REPORT_BACKUP_DIR=./reports_backup

# Feature Flags
ENABLE_RETRY_SYSTEM=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_CAPTCHA=false
ENABLE_IP_BLOCKING=true
ENABLE_USER_BLOCKING=true

# Security
MAX_LOGIN_ATTEMPTS=5
BLOCK_DURATION=3600000
ALLOWED_COUNTRIES=US,UK,CA,AU,DE,FR
