{
  "name": "whatsapp-mass-reporter",
  "version": "2.0.0",
  "description": "Telegram bot for mass reporting WhatsApp numbers to official support",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "setup": "node setup.js",
    "test:email": "node test-email.js",
    "test:config": "node -e \"require('./config'); console.log('âœ… Config validation passed');\"",
    "test:bot": "node test-bot.js",
    "install-deps": "npm install",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "lint": "eslint . --ext .js",
    "backup": "node scripts/backup.js",
    "stats": "node scripts/stats.js"
  },
  "keywords": [
    "whatsapp",
    "telegram",
    "bot",
    "report",
    "mass",
    "email",
    "automation",
    "reporter",
    "support",
    "abuse",
    "spam"
  ],
  "author": {
    "name": "WhatsApp Mass Reporter",
    "email": "support@whatsapp-reporter.com",
    "url": "https://github.com/yourusername/whatsapp-mass-reporter"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingsly771/whatsapp-mass-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/kingsly771/whatsapp-mass-reporter/issues"
  },
  "homepage": "https://github.com/kingsly771/whatsapp-mass-reporter#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.0.0"
  },
  "optionalDependencies": {
